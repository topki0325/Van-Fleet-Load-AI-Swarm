{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo: check",
      "type": "shell",
      "command": "cargo",
      "args": ["check"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "cargo: build",
      "type": "shell",
      "command": "cargo",
      "args": ["build"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "cargo: run",
      "type": "shell",
      "command": "cargo",
      "args": ["run"],
      "problemMatcher": ["$rustc"],
      "group": "test"
    }
  ]
}
